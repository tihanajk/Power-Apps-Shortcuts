{
  "manifest_version": 3,
  "version": "2.0",
  "name": "Levelup Shortcuts",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "My levelup shortcuts",
    "default_popup": "popup/info.html"
  },
  "commands": {
    "god_mode": {
      "description": "god mode"
    },
    "ribbon_debug": {
      "suggested_key": {
        "default": "Shift+Alt+C"
      },
      "description": "ribbon debug"
    },
    "advanced_find": {
      "suggested_key": {
        "default": "Shift+Alt+F"
      },
      "description": "advanced find"
    },
    "locate_on_form": {
      "suggested_key": {
        "default": "Shift+Alt+L"
      },
      "description": "locate on form"
    },
    "open_list": {
      "description": "open entity list"
    },
    "open_record": {
      "description": "open record"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["godMode.js", "locate.js", "info.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "*://*.crm4.dynamics.com/*",
        "*://*.crm4.dynamics.com.mcas.ms/*",
        "*://*.crm.dynamics.com/*"
      ],
      "js": ["content.js", "popup/info.js"]
    }
  ]
}
