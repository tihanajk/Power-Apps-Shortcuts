{
  "manifest_version": 3,
  "version": "1.0",
  "name": "Levelup Shortcuts",
  "icons": {
    "32": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "My levelup shortcuts"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Shift+Alt+G"
      },
      "description": "godmode shortcut"
    },
    "ribbon_debug": {
      "suggested_key": {
        "default": "Shift+Alt+C"
      },
      "description": "ribbon debug"
    },
    "advanced_find": {
      "suggested_key": {
        "default": "Shift+Alt+F"
      },
      "description": "advanced find"
    },
    "locate_on_form": {
      "suggested_key": {
        "default": "Shift+Alt+L"
      },
      "description": "locate on form"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["godMode.js", "locate.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "*://*.crm4.dynamics.com/*",
        "*://*.crm4.dynamics.com.mcas.ms/*",
        "*://*.crm.dynamics.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
