{
  "manifest_version": 2,
  "version": "1.0",
  "name": "Levelup Shortcuts",
  "icons": {
    "32": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Shift+Alt+G"
      },
      "description": "godmode shortcut"
    },
    "ribbon_debug": {
      "suggested_key": {
        "default": "Shift+Alt+C"
      },
      "description": "ribbon debug"
    },
    "advanced_find": {
      "suggested_key": {
        "default": "Shift+Alt+F"
      },
      "description": "advanced find"
    },
    "locate_on_form": {
      "suggested_key": {
        "default": "Shift+Alt+L"
      },
      "description": "locate on form"
    }
  },
  "web_accessible_resources": ["godMode.js", "locate.js"],
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.crm4.dynamics.com/*", "*://*.crm4.dynamics.com.mcas.ms/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "My levelup shortcuts"
  }
}
