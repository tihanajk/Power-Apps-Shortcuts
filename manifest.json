{
  "manifest_version": 3,
  "version": "2.0.0.1",
  "name": "Power Apps Shortcuts",
  "icons": {
    "16": "img/icon.png",
    "32": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "My Power Apps shortcuts",
    "default_popup": "popup/info.html"
  },
  "commands": {
    "god_mode": {
      "description": "god mode"
    },
    "ribbon_debug": {
      "suggested_key": {
        "default": "Shift+Alt+C"
      },
      "description": "ribbon debug"
    },
    "advanced_find": {
      "suggested_key": {
        "default": "Shift+Alt+F"
      },
      "description": "advanced find"
    },
    "locate_on_form": {
      "suggested_key": {
        "default": "Shift+Alt+L"
      },
      "description": "locate on form"
    },
    "open_list": {
      "description": "open entity list"
    },
    "open_record": {
      "description": "open record"
    },
    "see_optionsets": {
      "description": "see optionsets"
    },
    "list_securityroles": {
      "description": "list security roles"
    },
    "quick_field_update": {
      "description": "quick field update"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["godMode.js", "locate.js", "dataverse.js", "optionsTab/options.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["tabs", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.crm4.dynamics.com/*", "*://*.crm4.dynamics.com.mcas.ms/*", "*://*.crm.dynamics.com/*"],
      "js": ["content.js", "popup/info.js", "optionsTab/options.js"]
    }
  ]
}
